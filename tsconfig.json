{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
